<%= form_for [@clinic, @patient, @medication] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :company %>
  <%= f.text_field :company %>
  <br>
  <%= f.label :adverse_reactions %>
  <%= f.text_area :adverse_reactions %>
  <br>
  <%= f.label :generic_option %>
  <%= f.radio_button(:generic_option, 1) %>
  <%= f.label(:generic_option, "yes") %>
  <%= f.radio_button(:generic_option, 0) %>
  <%= f.label(:generic_option, "no") %>
  <br>
  <%= f.submit %>
<% end %>
<br>
<%= link_to "Cancel", clinic_patient_path(@clinic, @patient) %>
